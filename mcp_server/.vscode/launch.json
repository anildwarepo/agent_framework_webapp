{
    "version": "0.2.0",
    "configurations": [
      {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": false,
            "purpose": ["debug-in-terminal"]
        },

        {
            "name": "mcp_server_debug",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "--app-dir", "..",
                "mcp_fastapi_server:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "3000"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "subProcess": true,
            "justMyCode": false
        },
        
        
    ]
  }
  